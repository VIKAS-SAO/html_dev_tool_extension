{
    "manifest_version":2,
    "name":"HTML Dev Tool",
    "version":"1.0",
    "web_accessible_resources":[
        "images/*.png"
     ] , 
    "description":"This is tool that helps to identify the document elements in any webpage .",
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["content.js"]
        }   
     ],
     "permissions":["tabs"],
     "browser_action":{
         "default_icon":"images/logo.png",
         "default_popup":"popup/index.html",
         "default_title":"HTML Dev Tool"
     }

    
}
